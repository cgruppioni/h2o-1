{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "useBundler": true,
      "pathToBundler": "/Users/cgruppioni/.rbenv/shims/bundle",
      "pathToRDebugIDE": "/Users/cgruppioni/.rbenv/versions/2.4.1/gemsets/h2o-dev/gems/ruby-debug-ide-0.7.0",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server",
        "-p",
        "3000"
      ],
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      }
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "vuejs: chrome",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}/app/webpacker",
      "breakOnLoad": true,
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*",
        "webpack:///src/*": "${webRoot}/*",
        "webpack:///*": "*",
        "webpack:///./~/*": "${webRoot}/node_modules/*"
      }
    },
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
  ]
}

// https://github.com/rubyide/vscode-ruby/wiki/
// https://code.visualstudio.com/docs/editor/debugging#_launch-configurations
// https://github.com/microsoft/vscode-recipes/tree/master/debugging-Ruby-on-Rails