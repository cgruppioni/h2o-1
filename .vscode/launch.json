{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Rails server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server",
        "-p",
        "3000"
      ]
    },
    {
      "name": "Debug server",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "useBundler": true,
      "pathToBundler": "/Users/cgruppioni/.rbenv/shims/bundle",
      "pathToRDebugIDE": "/Users/cgruppioni/.rbenv/versions/2.4.1/gemsets/h2o-dev/gems/ruby-debug-ide-0.7.0",
      "program": "${workspaceRoot}/bin/rails",
      "args": [
        "server",
        "-p",
        "3000"
      ],
      "sourceMapPathOverrides": {
        "webpack:///./src/*": "${webRoot}/*"
      }
    },
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Test::Unit - open test file",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${file}",
      "includes": [
        "test",
        "lib"
      ]
    },
    {
      "name": "Test::Unit - single selected test",
      "type": "Ruby",
      "request": "launch",
      "cwd": "${workspaceRoot}",
      "program": "${file}",
      "includes": [
        "test",
        "lib"
      ],
      "args": [
        "-n",
        "${selectedText}"
      ]
    },
    {
      "name": "Debug Attach",
      "type": "Ruby",
      "request": "attach",
      "cwd": "${workspaceRoot}",
      "remoteWorkspaceRoot": "${workspaceRoot}",
      "remoteHost": "127.0.0.1",
      "remotePort": "1234"
    }
  ]
}

// https://github.com/rubyide/vscode-ruby/wiki/
// https://code.visualstudio.com/docs/editor/debugging#_launch-configurations
// https://github.com/microsoft/vscode-recipes/tree/master/debugging-Ruby-on-Rails