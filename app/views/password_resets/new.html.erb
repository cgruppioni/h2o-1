<div class="standard-form">
  <h1>Forgot Password</h1>
  <%= form_tag password_resets_path, :class => "formtastic" do %>
    Fill out the form below and instructions to reset your password will be emailed to you:<br />
    <br />
    <%= label_tag(:login, "Login:") %>
    <%= text_field_tag "login" %><br />
    <br />
    <%= submit_tag "Reset my password", :class => 'button' %>
    <br/><small><%= link_to "Forgot your login?", new_login_notifier_path %></small>
  <% end %>
</div>
